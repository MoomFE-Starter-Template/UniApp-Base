{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>moomfe/renovate-config"
  ],
  "packageRules": [
    {
      "groupName": "dcloudio updates",
      "matchPackagePrefixes": ["@dcloudio"],
      "excludePackageNames": ["@dcloudio/types"]
    }
  ],
  "ignoreDeps": [
    // Uniapp 支持的 Vue 版本
    "vue",
    "pinia",

    // 使用了 pnpm 打补丁的包
    "vue-demi",
    "@vueuse/*"
  ]
}
